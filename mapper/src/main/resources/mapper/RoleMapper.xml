<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hantangtouzi.mapper.dao.RoleDao">

    <sql id="base_column_list">
        id, name, description
    </sql>

    <!--根据id查询角色-->
    <select id="getRoleById" resultType="Role" parameterType="Integer">
        select
        <include refid="base_column_list"/>
        from t_role
        where id = #{roleId}
    </select>

    <!--查询符合条件的所有的角色-->
    <select id="findRoles" resultType="Role" parameterType="Map">
        select
        <include refid="base_column_list"/>
        from t_role
        <where>
            <if test="name!=null and name!=''">
                and name = #{name}
            </if>
        </where>
        <if test="start !=null and pageSize != null">
            limit #{start}, #{pageSize}
        </if>
    </select>

    <!--查询符合条件的角色总数-->
    <select id="getTotalCount" resultType="Integer" parameterType="Map">
        select count(id) from t_role
        <where>
            <if test="name!=null and name!=''">
                and name = #{name}
            </if>
        </where>
    </select>

    <insert id="insertRole" parameterType="Role">
        insert into t_role(id, name, description) values (#{id}, #{name}, #{description})
    </insert>
</mapper>

